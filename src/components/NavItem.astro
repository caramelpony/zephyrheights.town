---
const { link, text, icon } = Astro.props;
---

<style>
  .nav-item {
    display: flex;
    align-items: center;
    width: calc(100% - 20px);
    height: 40px;
    padding: 0 10px;
    background-color: rgba(223, 221, 221, 0.438);
    border-color: #000000;
    border: 5px;
    border-radius: 7px;
    margin: 5px 10px;
    cursor: pointer;
    text-decoration: none;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-weight: bold;
    font-size: 12px;
    color: #333;
    box-sizing: border-box;
    transition: background-color 0.3s;
  }

  .nav-item:hover {
    background-color: rgba(255, 255, 255, 0.616);
  }

  .nav-item-square {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 25px;
    height: 25px;
    background-color: #ffffff94;
    border-radius: 5px;
    margin-right: 10px;
  }

  .nav-item-text {
    text-align: left;
  }
</style>

<a href={link} class="nav-item">
  <div class="nav-item-square">
    <i class={`${icon}`}></i>
  </div>
  <div class="nav-item-text">{text}</div>
</a>
