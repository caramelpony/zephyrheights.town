---
import NavItem from './NavItem.astro';
---

<style>
  .left-side-nav {
    position: fixed;
    top: 10px;
    left: 10px;
    bottom: 10px;
    width: 200px;
    background-color: rgba(255, 255, 255, 0.25);
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0;
    box-sizing: border-box;
    overflow: auto;
    overflow-x: hidden;
  }

  .banner {
    width: 100%;
    background-color: rgba(255, 255, 255, 0.61);
    padding: 10px 0;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 15px;
    margin-right: 15px;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-weight: bold;
    font-size: 15px;
    color: #333;
    box-sizing: border-box;
  }

  .top-banner {
    margin-bottom: 0px;
    padding-top: 20px;
    padding-bottom: 20px;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
  }

  .fancy {
    margin: 0px;
    padding-left: 0px;
    padding-top: 0px;
    padding-right: 0px;
    margin-bottom: 10px;
    padding-bottom: 3px;
    background-image: linear-gradient(to right, #602fbb, #df0170);
    background-position: bottom;
  }

  .bottom-banner {
    width: 100%;
    background-color: rgba(255, 255, 255, 0.103);
    padding: 10px 0;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 15px;
    margin-right: 15px;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-weight: bold;
    font-size: 13px;
    color: #333;
    box-sizing: border-box;
    margin-top: auto;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    position: absolute;
    bottom: 0;
  }

  .title {
    text-align: center;
  }

  .logo {
    width: 75px;
    height: auto;
  }

  @media (max-height: 590px) {
    .bottom-banner {
        display: none;
    }
    .logo {
        display: none;
    }
  }

</style>

<nav class="left-side-nav">
    <div class="banner top-banner">
        <div class="title">Town of Zephyr Heights</div>
    </div>
    <div class="fancy banner"></div>
    <slot></slot>
    <div class="bottom-banner">
        <img class="logo" src="https://zephyrheights.town/assets/img/Welcome.png" alt="Logo">
    </div>
</nav>
